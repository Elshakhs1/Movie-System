        {
            "name": "Movies",
            "item": [
                {
                    "name": "Get All Movies",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/movies?page=1&limit=10",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "movies"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                },
                                {
                                    "key": "searchTerm",
                                    "value": "inception",
                                    "disabled": true
                                },
                                {
                                    "key": "genre",
                                    "value": "Action",
                                    "disabled": true
                                },
                                {
                                    "key": "year",
                                    "value": "2010",
                                    "disabled": true
                                }
                            ]
                        },
                        "description": "Get all movies with optional filtering"
                    }
                },
                {
                    "name": "Create Movie",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set('movieId', jsonData.data._id);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Inception\",\n  \"releaseYear\": 2010,\n  \"description\": \"A thief who enters dreams and steals ideas implants one into a CEO's mind.\",\n  \"genres\": [\"Action\", \"Sci-Fi\", \"Thriller\"],\n  \"directorId\": \"{{directorId}}\",\n  \"artistIds\": [\"{{actorId}}\"]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/movies",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "movies"
                            ]
                        },
                        "description": "Create a new movie (admin only)"
                    }
                },
                {
                    "name": "Upload Movie Poster",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "poster",
                                    "type": "file",
                                    "src": "/path/to/poster.jpg"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/movies/{{movieId}}/poster",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "movies",
                                "{{movieId}}",
                                "poster"
                            ]
                        },
                        "description": "Upload a movie poster (admin only)"
                    }
                },
                {
                    "name": "Delete Movie",
                    "request": {
                        "method": "DELETE",
                        "header": [
